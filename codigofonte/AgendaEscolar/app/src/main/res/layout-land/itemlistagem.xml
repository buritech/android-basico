<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/itemLayoutFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bordaImagem"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_no_image"
        android:contentDescription="@string/fotoProfessorDesc" />
    <TextView
        android:id="@+id/itemLayoutNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/itemLayoutFoto"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:textColor="@color/texto"/>

    <TextView
        android:id="@+id/itemLayoutTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:textSize="15sp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/itemLayoutEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_below="@id/itemLayoutTelefone"
        android:textSize="15sp"
        android:textStyle="italic" />
</RelativeLayout>